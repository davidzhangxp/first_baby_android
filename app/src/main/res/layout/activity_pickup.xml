<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PickupActivity">

        <TextView
            android:id="@+id/pickup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="House of poolesville only provide pickup service."
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/pickup_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="Please pick up at 19611 Fisher Ave, Poolesville, MD 20837"
android:layout_below="@id/pickup_title"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="normal" />

        <CheckBox
            android:id="@+id/pickup_checkbox_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickup_title2"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/pickup_checkboxlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickup_title2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pickup_checkbox_box"
            android:text="Pick up"
            android:textSize="22dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pickup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickup_checkbox_box"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/green_button_background"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="20dp" />


</RelativeLayout>